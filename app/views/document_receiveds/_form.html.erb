<%= render 'shared/errors', obj: @document_received %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@document_received, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :job_id %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :job_id, class: "form-control", placeholder: "Job Id", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :date %>
				</div>
				<div class="col-sm-8">
					<%= f.date_field :date, class: "form-control", placeholder: "Date", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>
		<% end %>

		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and Back to Document Received listing", document_receiveds_path %> ]
		</div>
	</div>
</div>