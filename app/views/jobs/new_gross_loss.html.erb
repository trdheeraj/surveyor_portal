<div class="container">
	<h1 style="text-align: center;"> Add Gross Loss </h1>

	<%= render 'shared/errors', obj: @job %>

	<div class="row">
		<div class="col-xs-12">
			<%= form_for(@job, :html => {class: "form-horizontal", role: "form"}) do |f| %>
				<div class="form-group">
					<div class="col-sm-2 control-label">
						<%= f.label :gross_loss %>
					</div>
					<div class="col-sm-8">
						<%= f.text_field :gross_loss, class: "form-control", placeholder: "Gross Loss", autofocus: true %>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<%= f.submit class: "btn btn-primary btn-lg" %>
					</div>
				</div>
			<% end %>
			<div class="col-xs-4 col-xs-offset-4">
				[ <%= link_to "Cancel request and Back to jobs listing", jobs_path %> ]
			</div>
		</div>
	</div>
</div>