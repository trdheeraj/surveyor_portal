<%= render 'shared/errors', obj: @job_status %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@job_status, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :job_id %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :job_id, class: "form-control", placeholder: "Job Id", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :ila_date %>
				</div>
				<div class="col-sm-8">
					<%= f.date_field :ila_date, class: "form-control", placeholder: "ILA Date", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :lor_date %>
				</div>
				<div class="col-sm-8">
					<%= f.date_field :lor_date, class: "form-control", placeholder: "LOR Date", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>
		<% end %>

		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and Back to job statuses listing", job_statuses_path %> ]
		</div>
	</div>
</div>