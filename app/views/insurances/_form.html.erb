<%= render 'shared/errors', obj: @insurance %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@insurance, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :insurance_name %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :name, class: "form-control", placeholder: "Insurer Name", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :gst_number %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :gst_number, class: "form-control", placeholder: "GST Number" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label">
					<%= f.label :location %>
				</div>
				<div class="col-sm-8">
					<%= f.text_field :location, class: "form-control", placeholder: "Location", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>
		<% end %>

		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and Back to insurances listing", insurances_path %> ]
		</div>
	</div>
</div>